<form addfieldprefix="Akeeba\Component\ContactUs\Administrator\Field">
    <fieldset name="basic">
        <field
                name="contactus_category_id"
                type="number"
                label="JGLOBAL_FIELD_ID_LABEL"
                default="0"
                readonly="true"
                class="readonly"
        />

        <field
                name="title"
                type="text"
                label="COM_CONTACTUS_CATEGORIES_FIELD_TITLE"
                description="COM_CONTACTUS_CATEGORIES_FIELD_TITLE_DESC"
                default=""
                required="true"
        />

        <field
                name="email"
                type="email"
                label="COM_CONTACTUS_CATEGORIES_FIELD_EMAIL"
                description="COM_CONTACTUS_CATEGORIES_FIELD_EMAIL_DESC"
                default=""
                required="true"
        />

        <field
                name="sendautoreply"
                type="list"
                layout="joomla.form.field.radio.switcher"
                label="COM_CONTACTUS_CATEGORIES_FIELD_SENDAUTOREPLY"
                description="COM_CONTACTUS_CATEGORIES_FIELD_SENDAUTOREPLY_DESC"
                default="0"
                validate="options"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
                name="autoreply"
                type="editor"
                label="COM_CONTACTUS_CATEGORIES_FIELD_AUTOREPLY"
                description="COM_CONTACTUS_CATEGORIES_FIELD_AUTOREPLY_DESC"
                showon="sendautoreply:1"
                filter="JComponentHelper::filterText"
        />

        <field
                name="access"
                type="accesslevel"
                label="JFIELD_ACCESS_LABEL"
                filter="UINT"
                validate="options"
        />

        <field
                name="language"
                type="contentlanguage"
                label="JFIELD_LANGUAGE_LABEL"
        >
            <option value="*">JALL</option>
        </field>

        <field
                name="ordering"
                type="text"
                label="JFIELD_ORDERING_LABEL"
                size="6"
                default="0"
        />

        <field
                name="enabled"
                type="list"
                layout="joomla.form.field.radio.switcher"
                label="JENABLED"
                description="JFIELD_ENABLED_DESC"
                default="0"
                validate="options"
        >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
                name="created_on"
                type="calendar"
                label="JGLOBAL_CREATED_DATE"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
        />

        <field
                name="created_by"
                type="user"
                label="JGLOBAL_FIELD_CREATED_BY_LABEL"
                validate="UserId"
        />

        <field
                name="modified_on"
                type="calendar"
                label="JGLOBAL_FIELD_MODIFIED_LABEL"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
        />

        <field
                name="modified_by"
                type="user"
                label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
                validate="UserId"
        />

        <field
                name="locked_by"
                type="hidden"
                filter="unset"
        />

        <field
                name="locked_on"
                type="hidden"
                filter="unset"
        />

    </fieldset>
</form>
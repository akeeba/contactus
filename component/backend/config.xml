<config addfieldpath="/administrator/components/com_contactus/fields">
    <inlinehelp button="show"/>
    <fieldset name="layout" label="COM_CONTACTUS_CONFIG_LAYOUT_TITLE">
        <field name="akismet_api_key"
               type="text"
               default=""
               size="50"
               label="COM_CONTACTUS_CONFIG_AKISMET_API_KEY_LABEL"
               description="COM_CONTACTUS_CONFIG_AKISMET_API_KEY_DESC"
               class="input-xxlarge"/>

        <field name="privacypolicy"
               type="url"
               label="COM_CONTACTUS_CONFIG_PRIVACYPOLICY_LABEL"
               description="COM_CONTACTUS_CONFIG_PRIVACYPOLICY_DESC"
               class="input-xxlarge"/>
    </fieldset>

    <fieldset
            name="permissions"
            label="JCONFIG_PERMISSIONS_LABEL"
            description="JCONFIG_PERMISSIONS_DESC"
    >

        <field
                name="rules"
                type="rules"
                label="JCONFIG_PERMISSIONS_LABEL"
                class="inputbox"
                filter="rules"
                component="com_contactus"
                section="component"/>
    </fieldset>
</config>

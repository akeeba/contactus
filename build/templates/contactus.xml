<extension version="2.5" type="component" method="upgrade">
	<name>Contactus</name>
	<creationDate>##DATE##</creationDate>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@akeeba.com</authorEmail>
	<authorUrl>https://www.akeeba.com</authorUrl>
	<copyright>Copyright (c)2013-2021 Nicholas K. Dionysopoulos / Akeeba Ltd</copyright>
	<license>GNU GPL v3 or later</license>
	<version>##VERSION##</version>
	<description>A simple contact form component used to demonstrate the FOF 3 framework</description>

	<!-- Public front end files -->
	<files folder="frontend">
		<filename>contactus.php</filename>

		<folder>Controller</folder>
		<folder>Dispatcher</folder>
		<folder>Helper</folder>
		<folder>Model</folder>
		<folder>View</folder>
        <folder>views</folder>
        <folder>ViewTemplates</folder>
	</files>

	<!-- Administrator back-end section -->
	<administration>
		<!-- Administration menu -->
		<menu view="Items">COM_CONTACTUS</menu>

		<!-- Back-end files -->
		<files folder="backend">
			<folder>sql</folder>
			<folder>Controller</folder>
			<folder>Dispatcher</folder>
			<folder>Model</folder>
			<folder>View</folder>
			<folder>ViewTemplates</folder>

			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>contactus.php</filename>
			<filename>fof.xml</filename>
		</files>

		<!-- Back-end translation files -->
		<languages folder="language/backend">
			<language tag="en-GB">en-GB/en-GB.com_contactus.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_contactus.sys.ini</language>
		</languages>

	</administration>

	<!-- Front end translation files -->
	<languages folder="language/frontend">
		<language tag="en-GB">en-GB/en-GB.com_contactus.ini</language>
	</languages>

	<!-- Media files -->
	<media destination="com_contactus" folder="media">
		<folder>css</folder>
		<folder>images</folder>
	</media>

	<scriptfile>script.com_contactus.php</scriptfile>
</extension>
